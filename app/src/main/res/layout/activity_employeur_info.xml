<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pagebkg"
    tools:context=".activities.EmployeurInfoActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:background="@drawable/lavender_border"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cercle_border">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/detailImage"
                    android:src="@drawable/uploadimg"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/profileTxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/txt_border"
                android:paddingStart="20dp"
                android:textSize="20dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"
                android:drawableStart="@drawable/company"
                android:drawablePadding="16dp"
                android:hint="nom de l'entreprise"/>

            <TextView
                android:id="@+id/phoneTxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/txt_border"
                android:paddingStart="20dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="16dp"
                android:textSize="20dp"
                android:inputType="phone"
                android:hint="numéro de téléphone"/>

            <TextView
                android:id="@+id/adresseTxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/txt_border"
                android:paddingStart="20dp"
                android:textSize="20dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"
                android:drawableStart="@drawable/location"
                android:drawablePadding="16dp"
                android:hint="ville"/>

            <TextView
                android:id="@+id/websiteTxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/txt_border"
                android:paddingStart="20dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"
                android:drawableStart="@drawable/website"
                android:drawablePadding="16dp"
                android:textSize="20dp"
                android:inputType="textUri"
                android:hint="site web"/>
            <TextView
                android:id="@+id/linkedinTxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/txt_border"
                android:paddingStart="20dp"
                android:textSize="20dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"
                android:drawableStart="@drawable/linkedin"
                android:drawablePadding="16dp"

                android:hint="linkedIn"/>
            <TextView
                android:id="@+id/facebookTxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/txt_border"
                android:paddingStart="20dp"
                android:textSize="20dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"
                android:drawableStart="@drawable/facebook"
                android:drawablePadding="16dp"
                android:hint="facebook"/>

            <TextView
                android:id="@+id/emailTxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/txt_border"
                android:paddingStart="20dp"
                android:textSize="20dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"
                android:drawableStart="@drawable/email"
                android:drawablePadding="16dp"
                android:hint="Email"
                android:inputType="textEmailAddress"/>

            <Button
                android:id="@+id/inscrireBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/blue"
                android:textSize="16sp"
                android:text="Modifier mes informations" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
