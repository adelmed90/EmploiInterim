<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DemandeurInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pagebkg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="60dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:background="@drawable/lavender_border"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cercle_border"
                    android:padding="4dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/detailImage"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/uploadimg"
                        app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/commentTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/txt_border"
                    android:gravity="start|center_vertical"
                    android:hint="pas de commentaire"
                    android:paddingStart="20dp"
                    android:textColor="@color/lavender"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/profileTxt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/txt_border"
                    android:drawableStart="@drawable/nom"
                    android:drawablePadding="16dp"
                    android:gravity="start|center_vertical"
                    android:hint="nom et preom"
                    android:paddingStart="20dp"
                    android:textColor="@color/lavender"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/phoneTxt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/txt_border"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="16dp"
                    android:gravity="start|center_vertical"
                    android:hint="numéro de téléphone"
                    android:inputType="phone"
                    android:paddingStart="20dp"
                    android:textColor="@color/lavender"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/adresseTxt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/txt_border"
                    android:drawableStart="@drawable/location"
                    android:drawablePadding="16dp"
                    android:gravity="start|center_vertical"
                    android:hint="adresse"
                    android:paddingStart="20dp"
                    android:textColor="@color/lavender"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/nationaliteTxt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/txt_border"
                    android:drawableStart="@drawable/passeport"
                    android:drawablePadding="16dp"
                    android:gravity="start|center_vertical"
                    android:hint="Nationalité"
                    android:paddingStart="20dp"
                    android:textColor="@color/lavender"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/birthdayTxt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/txt_border"
                    android:drawableStart="@drawable/anniversaire"
                    android:drawablePadding="16dp"
                    android:gravity="start|center_vertical"
                    android:hint="Date de naissance"
                    android:paddingStart="20dp"
                    android:textColor="@color/lavender"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/emailTxt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/txt_border"
                    android:drawableStart="@drawable/email"
                    android:drawablePadding="16dp"
                    android:gravity="start|center_vertical"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp"
                    android:textColor="@color/lavender"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/resume"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/txt_border"
                    android:drawableStart="@drawable/pdf"
                    android:drawablePadding="16dp"
                    android:gravity="start|center_vertical"
                    android:hint="curriculum vitae"
                    android:paddingStart="20dp"
                    android:textColor="@color/lavender"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/inscrireBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/blue"
                    android:text="Modifier mes informations"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>